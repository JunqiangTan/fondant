e_n_12 = {one: 1, two: 2, three: 3, four: 4, five: 5, six: 6, seven: 7, eight: 8, nine: 9, ten: 10, eleven: 11, twelve: 12}

body
.body
  & >
    +fd(header, 0)
      margin-bottom .4rem
      padding 0
      line-height 100%
      width 100%
      box-sizing border-box
      &.fixed
        position fixed
        top 0
    +fd(main, 0)
      width 100%
      box-sizing border-box
      &:after
        clearfix()
      > 
        article
        .article
          float left
          width 70%
        aside
        .aside
          float right
          width 30%
    +fd(footer, 0)
      width 100%
      margin .4rem 0
      box-sizing border-box
      &.fixed
        position fixed
        bottom 0

.row
  +fd()
    display block
    box-sizing border-box
    > .col
      display block
      float left
      box-sizing border-box
      for key,value in e_n_12
        &.{key}
          width unit(100/12*value, "%")
    &:before
    &:after
      clearfix()
    // .row
    //   width auto
    &.table
      display table
      width 100%
      > .col
        padding 1% 1.5%
        display table-cell
        vertical-align middle
      aside
        width 17%
      article
        width 77%
      for key,value in e_n_12
        &.{key}
          > .col
            width unit(100/value, "%")
    > aside
    > .aside
      width 20%
    > article
    > .article
      width 80%

// box be center
.mid
  +fd()
    margin auto
    max-width 100%
    @media (min-width: 768px)
      width 756px
    @media (min-width: 992px)
      width 960px
    @media (min-width: 1200px)
      width 1176px
    &:after
      clearfix()
