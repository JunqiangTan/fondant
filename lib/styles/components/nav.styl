nav.top
  +fd()
    padding .5em 0
    &:after
      clearfix()
    .nav
      list-style-type none
      margin 0
      padding 0
      border none
      box-shadow none
      background-color transparent
      @media (max-width: 768px)
        width 100%
      li
      .li
        border none
        fr(1)
        display inline-block
        padding 1rem .75rem
        line-height 1.2em
        @media (max-width: 768px)
          display block !important
          border-top 1px solid #666 !important
          margin 0 auto
    .brand
      .logo
        display block
        padding .5rem .5rem
        img
          height 2em
      
        