/***** Functions *****/
// h1-h6 function
h(n)
  fr((n - 2 * i) / 10)
  margin 0 auto .4em auto
  {block}

/***** Styles *****/
// default link
a
  color color-a
  text-decoration none
  &:hover
    color color-a-hover
  &:active
    color color-a-active
    transition transition-hover

// h1-h6
for i in 1 2 3 4 5 6
  .h{i}
  h{i}
    +fd()
      font-weight normal
      +h(22)
        color darken(dark-front, 20%)

// h2-h6 .sub
for i in 2 3 4 5 6
  .h{i}.sub
  h{i}.sub
    +fd()
      +h(18)
        color light-front

// formatting
p
  +fd()
    font-size .8rem

code
  color color-code
  background-color light-back
  border 1px solid base-border
  border-radius 4px
  font-size 1em
  padding 0 3px
  overflow auto
  word-wrap break-word
  word-break break-word

// [lang|=zh]
:lang(zh)
  dfn&
    font-style normal
    text-decoration underline
  cite&
    font-style normal
    &:before
      content '\300A'
    &:after
      content '\300B'

mark
::selection
  background-color color-selection

address
  font-style normal
  margin .6em auto

blockquote
  position relative
  &:before
  &:after
    position absolute
    font-size 2em
    // font-family fantasy
  &:before
    left -.5em
    top -.2em
    content '\201C'
  &:after
    right -.5em
    bottom -.7em
    content '\201D'

samp
  background-color samp-back
  color samp-front
  padding .1em .4em

kbd
  background-color light-back
  border 1px solid base-border
  border-radius 3px
  font-size .6em
  padding .1em .2em
  white-space nowrap
  box-shadow 0.1em 0.2em 0.2em base-shadow

// base text style
.bold
  +fd()
   font-weight bold !important

.text-left
  +fd()
    text-align left !important
.text-right
  +fd()
    text-align right !important
.text-center
  +fd()
    text-align center !important

// alert
.alert
  +fd()
    padding .2em .8em
    border-width 1px
    border-style solid
    border-radius .2rem
    colorful(colorful-light)

// text in label / badge style
.label
.badge
  +fd()
    display inline-block
    vertical-align middle
    border-width 1px
    border-style solid
    font-weight normal
    box-sizing border-box
    margin 0 .2em
    padding .2em .8em
    vertical-align middle
  colorful(colorful-invert)
.label
  +fd()
    border-radius .2rem

.badge
  +fd()
    line-height 1.4em
    height 1.4em
    border-radius .7em
    padding 0 .4em

// cursors
.pointer
  +fd()
    cursor pointer