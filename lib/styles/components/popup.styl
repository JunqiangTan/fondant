/***** Functions *****/
pointing-colorful(state)
  colorful-invert(state)
  box-shadow: 0px 1px 2px rgba(state['border-color'], .8)
  &:before
    background-color: state['color']
    box-shadow: 1px 1px 0 rgba(state['border-color'], 1)

/***** Styles *****/
// tips
.pointing
  +fd()
    display block
    position relative
    border-width 1px
    border-style solid
    padding 1em
    border-radius .2rem
    margin 1em
    &:before
      position absolute
      width 1em
      height 1em
      background-image none
      z-index 2
      box-sizing border-box
    &.south
      &:before
        content ""
        bottom -.5em
        margin-left -.5em
        left 50%
        transform rotate(45deg) !important
      &.east:before
        margin-left -2em
      &.west:before
        left 1.5em
    &.north
      &:before
        content ""
        top -.46em
        left 50%
        transform rotate(225deg) !important
      &.east:before
        @extend .pointing.fd.south.east:before
      &.west:before
        left 1em
    &.east:before
      content ""
      left 100%
      margin-left -.52em
      transform rotate(-45deg)
    &.west:before
      content ""
      left -.47em
      transform rotate(135deg)
    colorful(pointing-colorful)

// modal
.modal
  +fd()
    background-color base-back
    border 1px solid base-border
    border-radius .4em
    user-select text
    position relative
    overflow hidden
    margin auto
    >
      .title
        margin 0
        padding 1.5em 2em
        font-size 1.2em
        line-height 1
      .content
        width 100%
        padding 2em
        background-color light-back
        box-sizing border-box
      .tools
        padding .8rem .8rem
        text-align right
        .close
          &:before
            @extend [class^="icon-"].fd.after:after
            @extend .fd.icon-cancel.after:after
            opacity .2
            color base-front
            margin 0
            position absolute
            top 1em
            right 1em
            cursor pointer
          &:hover:before
            opacity 1

.alert
  +fd()
    position relative
    white-space nowrap
    margin-bottom .8em
    overflow hidden
    >
      *:first-child
        padding .4em 0
      .tools
        position absolute
        height 100%
        top 0
        right 2em
        > *
          line-height 2.2em
        .close
          &:before
            @extend [class^="icon-"].fd.after:after
            @extend .fd.icon-cancel.after:after
            opacity .2
            color base-front
            margin 0
            position absolute
            top .7em
            right -1.5em
            cursor pointer
          &:hover:before
            opacity 1