.loading
  +fd()
    position absolute
    left 0
    top 0
    width 100%
    height 100%
    >
      *
        &
          position absolute
          width 2em
          height 2em
          left 50%
          top 50%
          margin -1em 0 0 -1em
          z-index 1
        &:before
        &:after
          content ""
          width 2em
          height 2em
          position absolute
          border-radius 50%
        &:before
          border .2em solid color-loader
          margin -.2em 0 0 -.2em
        &:after
          background-color color-loader
      .circle
        &:before
          opacity 0
          animation circle-1 1s infinite ease-in-out
        &:after
          animation circle-2 1s infinite ease-in-out
      .point
        animation rotation 2s infinite linear
        &:before
          border-top-color transparent !important
        &:after
          width .4em
          height .4em
          border-radius 100%
          top -.2em
          left .8em
          animation flash 1s infinite ease
    &.mask
      background-color base-mask
      >
        *
          &:before
            border .2em solid base-bright
          &:after
            background-color base-bright

@keyframes circle-1
  0%
    transform scale(.5)
    opacity 1
  50%
    transform scale(1)
    opacity .7
  100%
    transform scale(1)
    opacity 0
@keyframes circle-2
  0%
    transform scale(1)
  50%
    transform scale(.3)
  100%
    transform scale(1)

@keyframes rotation
  0%
    transform rotate(0deg)
  100%
    transform rotate(360deg)
@keyframes flash
  0%
    opacity 0
  50%
    opacity 1
  100%
    opacity 0
