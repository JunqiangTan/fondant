// font
base-size = 15px
base-family = "Lucida Grande", "Segoe UI", Verdana, Arial, "Heiti SC", "Microsoft YaHei", sans-serif;

// font path
font-path = '../fonts/'

// color
color-white = #FFF

color-black = #181717
color-dark-black = #000000

color-light-gray = #F5F4F5
color-base-gray = #8F949A
color-dark-gray = #DCDBDC

// color variables
light-mask = rgba(color-dark-black, .15)
base-mask = rgba(color-dark-black, .7)

base-highlight = #DA3610
base-bright = color-white
base-border = color-dark-gray

light-shadow = rgba(color-dark-black, .1)
base-shadow = rgba(color-dark-black, .3)

light-front = color-base-gray
base-front = #5B5B5B
dark-front = color-black
invert-front = color-white

light-back = color-light-gray
base-back = color-white
dark-back = color-black
invert-back = color-dark-black

states = {
  normal: {
    color: color-white,
    bg-color: color-white,
    invert-color: base-front,
    border-color: base-border,
    mask: 4%
  },
  lowlight: {
    color: color-light-gray,
    bg-color: color-white,
    invert-color: color-base-gray,
    border-color: color-dark-gray,
    mask: 4%
  },
  highlight: {
    color: c = #FF6426
    bg-color: color-white
    invert-color: color-white
    border-color: darken(c, 5%)
    mask: 14%
  },
  ok: {
    color: c = #82C32F
    bg-color: color-white
    invert-color: color-white
    border-color: darken(c, 10%)
    mask: 14%
  },
  warning: {
    color: c = #FFA105
    bg-color: color-white
    invert-color: color-white
    border-color: darken(c, 5%)
    mask: 14%
  },
  danger: {
    color: c = #D52F12
    bg-color: color-white
    invert-color: color-white
    border-color: darken(c, 10%)
    mask: 14%
  },
  info: {
    color: c = #4183c4
    bg-color: color-white
    invert-color: color-white
    border-color: darken(c, 5%)
    mask: 4%
  }
}

color-a = color-base-gray
color-a-hover = base-highlight
color-a-active = base-highlight
color-a-highlight = states['highlight']['color']
color-a-highlight-hover = darken(color-a-highlight, 10%)
color-a-highlight-active = color-a-highlight-hover
color-code = states['danger']['color']
color-selection = rgba(color-dark-black, 30%)
color-loader = states['highlight']['color']
color-disabled = color-dark-gray

samp-back = color-dark-black
samp-front = color-white

