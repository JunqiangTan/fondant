loader-clr = #0088E5

.loader
    +fd()
        width 20px
        height 20px
        position relative
        margin 20px 0
        .loader-container
            position absolute
            width 100%
            height 100%
            .circle1
                top 0
                left 0
            .circle2
                top 0
                right 0
            .circle3
                right 0
                bottom 0
            .circle4
                left 0
                bottom 0
        for rows in 1..3
            .container{rows}
                > span
                    width 6px
                    height 6px
                    background-color loader-clr
                    border-radius 100%
                    position absolute
                    animation bouncedelay 1.2s infinite ease-in-out
                    animation-fill-mode both
        .container1
            .circle2
                animation-delay -.9s
            .circle3
                animation-delay -.6s
            .circle4
                animation-delay -.3s
        .container2
            transform rotateZ(45deg)
            .circle1
                animation-delay -1.1s
            .circle2
                animation-delay -.8s
            .circle3
                animation-delay -.5s
            .circle4
                animation-delay -.2s
        .container3
            transform: rotateZ(90deg)
            .circle1
                animation-delay -1s
            .circle2
                animation-delay -.7s
            .circle3
                animation-delay -.4s   
            .circle4
                animation-delay -.1s
        &.l
            width 30px
            height 30px
        &.xl
            width 40px
            height 40px                 

@keyframes bouncedelay
    0%
    80%
    100% 
        transform scale(0)
    40% 
        transform scale(1)

.loading
    +fd()
        box-sizing border-box
        padding 2e 0
        &:after
        &:before  
            display table
            content ''
        &:after
            clear both
        .timeloader
          width 24px
          height 24px
          background-color transparent
          box-shadow inset 0px 0px 0px 2px loader-clr
          border-radius 50%
          position relative
          &:after
          &:before
            position absolute
            content ""
            background-color loader-clr
          &:after
            width 10px
            height 2px
            top 11px
            left 11px
            transform-origin 1px 1px
            animation minhand 2s linear infinite
          &:before
            width 8px
            height 2px
            top 11px
            left 11px
            transform-origin 1px 1px
            animation hrhand 8s linear infinite
        .pointloader
            width 30px
            height 30px
            border 1px loader-clr solid
            border-radius 50%
            animation rotation 1s ease-in-out infinite
            &:after
                width 5px
                height 5px
                background-color rgba(loader-clr,1)
                border-radius 100%
                position absolute
                content ""
                top 6px
        .batteryloader
            width 28px
            height 14px
            border 1px loader-clr solid
            border-radius 2px
            position relative
            animation charges 5s linear infinite
            &:after
                width 2px
                height 7px
                background-color loader-clr
                border-radius 0 1px 1px 0
                position absolute
                content ''
                top 2px
                right -4px

@keyframes minhand
    0%
        transform rotate(0deg)
    100%
        transform rotate(360deg)

@keyframes hrhand
    0%
        transform rotate(0deg)
    100%
        transform rotate(360deg)

@keyframes rotation
    0%
        transform rotate(0deg)
    100%
        transform rotate(360deg)

@keyframes charges
    0%
        box-shadow inset 0px 0px 0px loader-clr
    100%
        box-shadow inset 30px 0px 0px loader-clr
