.menu
  +fd()
    margin 1rem 0
    background-color base-white
    font-weight normal
    box-shadow 0px 0px 0px 1px rgba(dark-black, .1);
    border-radius .2rem
    font-size 0
    label
      font-size 1rem
    &:first-child
      margin-top 0
    &:last-child
      margin-bottom 0
    &:after
      content "."
      display block
      height 0
      clear both
      visibility hidden
    .item
      font-size 1rem
      user-select none
      -webkit-tap-highlight-color rgba(dark-black, 0)
      vertical-align middle
      text-decoration none
      box-sizing border-box
      transition opacity .2s ease,background .2s ease,box-shadow .2s ease
      position relative
      display inline-block
      padding .83em .95em
      border-top 0 solid rgba(dark-black, 0)
      cursor pointer
      line-height 1
      .menu
        >.item
          padding .5rem 1.5rem
          font-size .875rem
          &:before
            display none
        .active
          &.item
            background-color rgba(dark-black,.03)
            box-shadow none 
      &.left
        float left
      &.right
        float right
        &:before
          right auto
          left 0
      &:before
        position absolute
        content ''
        top 0
        left 0
        width 1px
        height 100%
        background-image linear-gradient(rgba(dark-black, .05) 0%,rgba(dark-black, 0.1) 50%,rgba(dark-black, .05) 100%)
    a.item    
      &:hover
        cursor pointer
        background-color rgba(dark-black, .02)
        color rgba(color-loader, .95)
      &.active
        background-color rgba(dark-black, .01)
        color rgba(color-loader, .95)
        box-shadow 0em .2em 0em inset
      &:first-child
        &:before
          display none
      >.item
        &:first-child
          border-radius .2rem 0 0 .2rem
        &:last-child
          border-radius 0 .2rem .2rem 0
    .menu
      margin 0
      box-shadow none
      &.right
        float right
        label
          margin-right .5em
        .item
          &:before
            right auto
            left 0
      &.left
        float left
    &.disabled
      cursor default
      color rgba(dark-black, .2)
      background-color transparent !important
      &:hover
        cursor default
        color rgba(dark-black, .2)
        background-color transparent !important
    &.vertical
      width 15.5rem
      .dropdown
        .menu
          top 0
          left 100%
          margin 0 0 0 2px !important
      .item
        display block
        height auto !important
        border-top none
        border-left 0em solid rgba(dark-black, 0)
        border-right none
        label
          margin-bottom .6em
        >.menu
          margin .5em -.95em 0
          >.item
            padding .5rem 1.5rem
            font-size .875rem
            &:before
              display none
        .menu
          .active
            &.item
              background-color rgba(dark-black,.03)
              box-shadow none 
        +icon-class()
          float right
        &:before
          position absolute
          content ''
          top 0
          left 0
          width 100%
          height 1px
          background-image linear-gradient(to right,rgba(dark-black, .03) 0%,rgba(dark-black, .1) 1.5em,rgba(dark-black, 0.03) 100%)
        &:first-child
          &:before
            background-image none
        &.active
          border-radius 0
          box-shadow .2em 0 0 inset
          &.item
          &:first-child
            border-radius 0 .2em 0 0
          &.item
          &:last-child
            border-radius 0 0 .2em 0
          &.item
          &:only-child
            border-radius: 0 .2em .2em 0
      >.item
        &:first-child
          border-radius .2em .2em 0 0
        &:last-child
          border-radius 0 0 .2em .2em

.dropdown
  +fd()
    position relative
    .menu
      position absolute
      box-shadow 0 0 1px 1px rgba(dark-black, .15)
      min-width calc(99%)
      z-index 2
      left 2px
      top 100%
      margin-top 1px
      .dropdown
        &.menu
          top 0
          left 100%
          margin 0 0 0 2px !important

        
