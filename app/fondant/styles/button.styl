buttons(flag = false)
  if flag == 2
    button
    .button
      {block}
  else
    button
    .button
    input[type="button"]
      {block}

add-button-color(state)
  color: state['invert-color']
  background-color: state['color']
  border-color: darken(state['border-color'], 10%)
  &:hover
  &:focus
  &.active
    background-color: darken(@background-color, state['mask'])
  &:active
    box-shadow: inset .05em .05em .8em .1em darken(darken(@background-color, state['mask']), 25%)

+buttons()
  +fd()
    border-width 1px
    border-style solid
    border-radius .2rem
    display inline-block
    font-family base-family
    font-size 1.2rem
    line-height 2em
    padding .1em .9em
    vertical-align middle
    cursor pointer
    margin 2px
    user-select none
    white-space nowrap
    &.s
      font-size .8rem
    &.m
      font-size 1rem
    &.l
      font-size 1.4rem
    &.xl
      font-size 1.6rem
    &.xxl
      font-size 1.8rem
    &:focus
      text-decoration none
      outline 0
    colorful(add-button-color, \&)
+buttons(2)
  +fd()
    +icon-class(\&)
      &:empty
        padding-left .6em
        padding-right .6em
        &:before
          margin auto .2em
      &:before
        margin-left 0
      &:after
        margin-right 0
      +icon-class(\>)
        &:before
          margin-left 0
      &.labeled
        position relative
        padding 0 .91em 0 3.3em
        overflow hidden
        &:before
          clear both
          position absolute
          top 0
          left 0
          width 2.4em
          background-color rgba(dark-black, .15)
          border-right 1px solid rgba(dark-black, .17)
          line-height 2em
          margin 0
        &.toggle
          padding-left .9em
          padding-right 3.3em
          &:after
            position absolute
            top 0
            right 0
            width 2.4em
            background-color rgba(dark-black, .15)
            line-height 2em
            border-left 1px solid rgba(dark-black, .17)
            margin 0 0 0 .8em

.buttons
  +fd()
    display inline-block
    +buttons()
      border-radius 0
      border-left-width 0
      float left
      margin 0
      &:first-child
        border-left-width 1px
        border-top-left-radius .2rem
        border-bottom-left-radius .2rem
      &:last-child
        border-top-right-radius .2rem
        border-bottom-right-radius .2rem
    +buttons(2)
      &.toggle
        padding-left .6em
        padding-right .6em
        +icon-class(\&)
          &:after
            margin 0
        &:empty
          &:before
            font-family "fontello"
            font-style normal
            font-weight normal
            speak none
            width .6em
            line-height 1em
            text-decoration inherit
            content '%s' % icons['angle-down']
    .buttons
      float left
      +buttons()
        &:first-child
        &:last-child
          border-radius 0
          border-left-width 0
    &.s >
      +buttons()
        font-size .8rem
    &.m >
      +buttons()
        font-size 1rem
    &.l >
      +buttons()
        font-size 1.4rem
    &.xl >
      +buttons()
        font-size 1.6rem
    &.xxl >
      +buttons()
        font-size 1.8rem
