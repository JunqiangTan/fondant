          bottom auto
          left auto
          margin-top -.4em
          box-shadow 1px -1px 1px rgba(dark-black, .2)
        &.ok
          &:before
            box-shadow: 1px -1px .1px states['ok']['border-color']
        &.danger
          &:before
            box-shadow: 1px -1px .1px states['danger']['border-color']
        &.warning
          &:before
            box-shadow: 1px -1px .1px states['warning']['border-color']
