/***** Functions *****/
// font colors
add-text-color(state)
  +fd()
    color (lightness(state['color']) > 80% ? state['invert-color'] : state['color']) !important

// h1-h6 function
h(n)
  fr((n - 2 * i) / 10)
  margin 0 auto .4em auto
  {block}

/***** Styles *****/
// colorful text
colorful(add-text-color)

// default link
a
  color color-a
  text-decoration none;
  &:hover
    color color-a-hover
  &:active
    color color-a-active

// h1-h6
for i in 1 2 3 4 5 6
  .h{i}
  h{i}
    +fd()
      font-weight normal
      +h(22)
        color darken(base-black, 20%)

// h2-h6 .sub
for i in 2 3 4 5 6
  .h{i}.sub
  h{i}.sub
    +fd()
      +h(18)
        color base-gray

// formatting
strong
  color base-black

code
  color color-code
  background-color light-gray
  border 1px solid dark-gray
  border-radius 4px
  font-size 1em
  padding 0 3px
  overflow auto
  word-wrap break-word
  word-break break-word

// [lang|=zh]
:lang(zh)
  dfn&
    font-style normal
    text-decoration underline
  cite&
    font-style normal
    &:before
      content '\300A'
    &:after
      content '\300B'

mark
::selection
  background-color color-selection

address
  font-style normal
  margin .6em auto

blockquote
  position relative
  &:before
  &:after
    position absolute
    font-size 2em
    // font-family fantasy
  &:before
    left -.5em
    top -.2em
    content '\201C'
  &:after
    right -.5em
    bottom -.7em
    content '\201D'

samp
  background-color dark-black
  color base-white
  padding .1em .4em

kbd
  background-color light-gray
  border 1px solid dark-gray
  border-radius 3px
  font-size .6em
  padding .1em .2em
  white-space nowrap
  box-shadow 0.1em 0.2em 0.2em dark-gray

.bold
  +fd()
   font-weight bold

.align-left
  +fd()
    text-align left
.align-right
  +fd()
    text-align right
.align-center
  +fd()
    text-align center
