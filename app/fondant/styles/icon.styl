/**
 * icons from fontello.com
 */
@font-face
  font-family 'fondant'
  src url(font-path+'fondant.eot')
  src url(font-path+'fondant.eot#iefix') format('embedded-opentype'),
       url(font-path+'fondant.woff') format('woff'),
       url(font-path+'fondant.ttf') format('truetype'),
       url(font-path+'fondant.svg#fontello') format('svg')
  font-weight normal
  font-style normal

+icon-class()
  +fd()
    &:not(.after):before
    &.after:after
      font-family "fondant"
      font-style normal
      font-weight normal
      font-variant normal
      speak none
      width 1em
      line-height 1em
      text-align center
      text-decoration inherit
      text-transform none
      margin-left .4em
      margin-right .4em

for name, character in icons
  .fd.icon-
  .fd > .icon-
      &{name}:not(.after):before
      &{name}.after:after
        content character