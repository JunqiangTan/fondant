e_n_12 = {one: 1, two: 2, three: 3, four: 4, five: 5, six: 6, seven: 7, eight: 8, nine: 9, ten: 10, eleven: 11, twelve: 12}
clear()
  content "."
  clear both
  height 0
  display block
  overflow hidden

body
.body
  & >
    +fd(header, 0)
      margin-bottom .4rem
      padding 0
      height 4rem
      line-height 100%
      width 100%
      box-sizing border-box
      &.fixed
        position fixed
        top 0
    +fd(main, 0)
      width 100%
      box-sizing border-box
      &:after
        clear()
      > 
        article
        .article
          float left
          width 70%
        aside
        .aside
          float right
          width 30%
    +fd(footer, 0)
      width 100%
      margin .4rem 0
      box-sizing border-box
      &.fixed
        position fixed
        bottom 0

// top navigation
nav.top
  +fd()
    height 100%
    line-height 4rem
    .menu
      list-style-type none
      margin 0
      padding 0
      height 100%
      li
      .li
        fr(1.2)
        display inline-block
        padding 1.25rem 1rem
        line-height 1.2em
        &:first-child
          padding-left 0
    .brand
      a
        color base-highlight
      &.logo
        text-indent 100% // to do 完成图片logo的样式

.row
  +fd()
    display block
    box-sizing border-box
    > .col
      display block
      float left
      box-sizing border-box
      for key,value in e_n_12
        &.{key}
          width unit(100/12*value, "%")
    &:before
    &:after
      clear()
    // .row
    //   width auto
    &.table
      display table
      width 100%
      > .col
        padding 1% 1.5%
        display table-cell
        vertical-align middle
      aside
        width 17%
      article
        width 77%
      for key,value in e_n_12
        &.{key}
          > .col
            width unit(100/value, "%")
    > aside
    > .aside
      width 20%
    > article
    > .article
      width 80%

// box be center
.mid
  +fd()
    margin auto
    max-width 100%
@media (min-width: 768px)
  .mid
    +fd()
      width 756px
@media (min-width: 992px)
  .mid
    +fd()
      width 960px
@media (min-width: 1200px)
  .mid
    +fd()
      width 1176px
