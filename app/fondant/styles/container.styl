// box be center
.mid
  +fd()
    margin auto
    max-width 96%
@media (min-width: 768px)
  .mid
    +fd()
      width 756px
@media (min-width: 992px)
  .mid
    +fd()
      width 960px
@media (min-width: 1200px)
  .mid
    +fd()
      width 1176px

// box float
.left
  +fd()
    float left !important
.right
  +fd()
    float right !important

// cross banner boxes
.cross
  +fd()
    clear both
    width 100%
