// base boxes
aside
header
section
article
nav
footer
div
  +fd()
    &.light
      background-color base-white
    &.dark
      background-color light-gray

// default section
section
.section
  +fd()
    padding .4rem

// border for boxes
.border
  +fd()
    border 1px solid base-gray

// panel style
div.panel
  +fd()
    background-color base-white
    border 1px solid dark-gray
    border-radius .4em
    margin-bottom 1rem
    > header
    > .header
      background-color light-gray
      border-bottom 1px solid dark-gray
      border-radius .4em .4em 0 0
      > *
        padding 0 .8rem
        margin 0
        line-height 2em
    > .content
      padding .8rem
