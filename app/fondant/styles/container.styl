// main boxes be center
.mid
  +fd()
    margin auto

// cross banner boxes
.cross
  +fd()
    clear both
    width 100%
    padding 1em 0
    color base-white
    for i in 1 2 3 4 5 6
      .h{i}
      h{i}
        color base-white !important


@media (min-width: 768px)
  .mid
    width 756px
@media (min-width: 992px)
  .mid
    width 960px
@media (min-width: 1200px)
  .mid
    width 1176px