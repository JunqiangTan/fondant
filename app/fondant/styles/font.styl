/**
 * icons from fontello.com
 */
@font-face
  font-family 'fontello'
  src url(font-path+'fonts/fontello.eot')
  src url(font-path+'fonts/fontello.eot#iefix') format('embedded-opentype'),
       url(font-path+'fonts/fontello.woff') format('woff'),
       url(font-path+'fonts/fontello.ttf') format('truetype'),
       url(font-path+'fonts/fontello.svg#fontello') format('svg')
  font-weight normal
  font-style normal

+icon-class()
  +fd()
    &:before
    &:after
      font-family "fontello"
      font-style normal
      font-weight normal
      font-variant normal
      speak none
      width 1em
      line-height 1em
      text-align center
      text-decoration inherit
      text-transform none
      margin-left .4em
      margin-right .4em
    &.toggle:before
      content ''!important
      width 0!important
      margin 0!important
      padding 0!important

for name, character in icons
  .fd.icon-
  .fd > .icon-
      &{name}:before
      &{name}.toggle:after
        content character