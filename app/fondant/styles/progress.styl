* + .progress
  +fd()
    margin-top 15px

.progress
  +fd()
    border 1px solid rgba(dark-black, .1)
    width 100%
    height 30px
    background-color light-gray
    border-radius 4px
    padding 2px
    box-sizing border-box
    .progress-bar
      float left
      height 100%
      background: linear-gradient(to bottom, states['highlight']['color'], states['highlight']['border-color']) repeat scroll 0 0 states['highlight']['color']
      border-radius(.2rem)
      transition width 1s ease-in-out,background-color 1s ease-out
      width 0
      animation 10s ease-in-out 0s normal none infinite finish
    &.active
      .progress-bar
        position relative
        &:after
          content ''
          opacity 0
          position absolute
          top 0
          left 0
          right 0
          bottom 0
          background base-white
          border-radius 4px
          animation progress-active 2s ease-out infinite
    &.striped
      .progress-bar
        background-size 30px 30px
        background-image linear-gradient(-45deg, rgba(base-white, .15) 25%, rgba(dark-black, 0) 25%, rgba(dark-black, 0) 50%, rgba(base-white, .15) 50%, rgba(base-white, .15) 75%, rgba(dark-black, 0) 75%, rgba(dark-black, 0))
      &.striped-active
        .progress-bar
          animation 2s linear 0s normal none infinite progress-striped
    &.no
      .progress-bar
        animation none  
    &.xs
      height 10px
      padding 0
    &.s
      height 20px
    &.ok
      .progress-bar
        background: linear-gradient(to bottom, states['ok']['color'], states['ok']['border-color']) repeat scroll 0 0 states['ok']['color']
    &.warning
      .progress-bar
        background: linear-gradient(to bottom, states['warning']['color'], states['warning']['border-color']) repeat scroll 0 0 states['warning']['color']
    &.danger
      .progress-bar
        background: linear-gradient(to bottom, states['danger']['color'], states['danger']['border-color']) repeat scroll 0 0 states['danger']['color']

@-webkit-keyframes progress-active
  0%
    opacity 0
    width 0
  50% 
    opacity .3
  100%
    opacity 0
    width 95%

@keyframes progress-active
  0%
    opacity 0
    width 0
  50% 
    opacity .3
  100%
    opacity 0
    width 100%

@keyframes finish
  0% 
    width 0
  40%
    width 100%
  100%
    width 100%

@keyframes progress-striped
  0% 
    background-position 0px 0
  100%
    background-position 60px 0

